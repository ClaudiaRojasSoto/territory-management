              <%= f.label :city, "Ciudad", class: "form-label" %>
              <%= f.text_field :city, class: "form-control", placeholder: "Copiap√≥" %>
            </div>

            <div class="mb-3">
              <%= f.label :role, "Sirve Como *", class: "form-label" %>
