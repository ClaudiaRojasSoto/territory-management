          fillColor: '#ffc107',
          fillOpacity: 0.3,
          weight: 4
        }).addTo(printMap);
        const bounds = L.latLngBounds(coordinates.map(c => [c[0], c[1]]));
        printMap.fitBounds(bounds, { padding: [20, 20] });
        printMap.invalidateSize(true);
      } catch (e) {
        // Fallback: render simple list only
      }
    }, 150);
  }
  
