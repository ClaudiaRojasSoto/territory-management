  // Function to demarcate the main congregation zone
  // Function to print main territory
  function printMainTerritory() {
    // Gather coordinates either from demarcation points, loaded feature or displayed layer
    let coordinates = [];
    if (window.mainTerritoryPoints && window.mainTerritoryPoints.length > 0) {
      coordinates = window.mainTerritoryPoints.map(point => [point.lat, point.lng]);
    } else if (window.mainCongregationFeature && window.mainCongregationFeature.geometry && window.mainCongregationFeature.geometry.coordinates) {
      try {
        const ring = window.mainCongregationFeature.geometry.coordinates[0] || [];
        coordinates = ring.map(c => [c[1], c[0]]);
      } catch (e) {}
    } else if (window.mainTerritoryLayer) {
      try {
        const latLngs = window.mainTerritoryLayer.getLatLngs();
        const ring = Array.isArray(latLngs) ? (Array.isArray(latLngs[0]) ? latLngs[0] : latLngs) : [];
        coordinates = ring.map(ll => [ll.lat, ll.lng]);
      } catch (e) {}
    }
    if (!coordinates || coordinates.length === 0) {
      alert('No main zone demarcated');
      return;
    }
    
    const printWindow = window.open('', '_blank');
    const congregationName = (window.congregationsById && currentCongregationId && window.congregationsById[String(currentCongregationId)]) || 'Main Congregation Zone';
    const pointsCount = Math.max(coordinates.length - 1, 0);
    
    printWindow.document.write(`
      <!DOCTYPE html>
      <html>
      <head>
        <title>Main Zone - Copiap√≥ Congregation</title>
        <style>
          body { font-family: Arial, sans-serif; margin: 20px; }
