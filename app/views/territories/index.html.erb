  }
  
  // Iniciar la carga cuando el DOM est√© listo
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initializeWhenMapReady);
  } else {
    initializeWhenMapReady();
  }
  
  let currentCongregationId = null;

